{
    "manifest_version": 2,
    "name": "Neps Academy Companion",
    "version": "0.2",
    "description": "This extension allow send test cases from Neps Academy to the VSCode extension CPH.",
    "permissions": [
        "activeTab",
        "http://localhost/",
        "http://localhost:27212/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "imports/utils.js",
                "imports/nepsApi.js",
                "imports/exerciseParser.js",
                "imports/competitionParser.js",
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default-icon": "icons/icon-128.png"
    },
    "icons": {
        "128": "icons/icon-128.png"
    }
}