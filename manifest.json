{
    "manifest_version": 2,
    "name": "Neps Companion",
    "description": "This extension shows a Google Image search result for the current page",
    "version": "0.1",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "contextMenus", "http://localhost/", "http://localhost:27212/*"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
        "128": "icons/icon-128.png"
    }
}